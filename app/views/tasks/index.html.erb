<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div><%= task.completed ? "✅" : "❌" %>
      <%= link_to "#{task.title}", task_path(task) %>
      <%= link_to "🚮", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" }%></div>
    </li>
  <% end %>
</ul>
<h2><%= link_to "Add a new task", tasks_new_path %></h2>


